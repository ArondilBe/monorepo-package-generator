{
  "name": "package-generator",
  "version": "0.0.6",
  "description": "The package 'package-generator' goal is to provide an easy to use tool to generate packages for monorepo. The generated packages are based on sample files and folders.",
  "keywords": [
    "package",
    "generator",
    "generation"
  ],
  "homepage": "https://github.com/arondilbe/package-generator#readme",
  "bugs": {
    "url": "https://github.com/arondilbe/package-generator/issues",
    "email": "pinodominique@gmail.com"
  },
  "license": "MIT",
  "author": "Dominique Pino (pinodominique@gmail.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/arondilbe/package-generator"
  },
  "main": "./esm/index.js",
  "type": "commonjs",
  "packageManager": "yarn@4.1.0",
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "clean:build": "rm -rf ./esm/",
    "test": "jest",
    "commit": "cz",
    "package:generate": "node ./esm/scripts/generatePackage.js --config ./packageGenerationExample.config.json"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "inquirer": "^8.2.6"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.27",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2",
    "typescript-eslint": "^7.2.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
